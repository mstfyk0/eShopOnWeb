@model IEnumerable<OrderViewModel> 
@{
    ViewData["Title"] = "All Order";
}

<div class="esh-orders">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <article class="esh-orders-titles row">
            <section class="esh-orders-title col-xs-2">Order No</section>
            <section class="esh-orders-title col-xs-1">Date</section>
            <section class="esh-orders-title col-xs-3">Order BY</section>
            <section class="esh-orders-title col-xs-2">Total</section>
            <section class="esh-orders-title col-xs-3">Status</section>
            <section class="esh-orders-title col-xs-1"></section>
        </article>
        <form asp-page="/AllOrderDetail/AllOrderDetail" method="get">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <article class="esh-orders-items row">
                   
                    <section class="esh-orders-item col-xs-2">@Html.DisplayFor(modelItem => item.OrderNumber)</section>
                    <section class="esh-orders-item col-xs-1">@item.OrderDate.ToString("d")</section>
                    <section class="esh-orders-item col-xs-3">@Html.DisplayFor(modelItem => item.BuyerId)</section>
                    <section class="esh-orders-item col-xs-2">$@item.Total.ToString("N2")</section>
                    <section class="esh-orders-item col-xs-3">@Html.DisplayFor(modelItem => item.Status)</section>
                    <section class="esh-orders-item col-xs-1">
                        <a class="esh-orders-link" asp-controller="Order" asp-action="AllOrderDetail" asp-route-orderId="@item.OrderNumber">Detail</a>
                    </section>
                </article>
                    <input type="hidden" asp-for="@item.OrderNumber" name="id" />
            }
        }
        </form>
    </div>
</div>
